#projects.projects
  .projects__wrapper
    .projects__gallery
      each project in projects
        picture.projects__gallery__media
          source(
            media='(max-width: 768px)',
            srcset=project.data.image.mobile.url
          )
          source(media='(min-width: 769px)', srcset=project.data.image.url)
          img.projects__gallery__media__image(
            src=project.data.image.url,
            alt=project.data.image.alt
          )
